{
  "_description": "Static permissions for SDD plugin. Add these patterns to .claude/settings.local.json for auto-approval of common SDD operations.",
  "_version": "1.0.0",

  "permissions": {
    "allow": [
      "Read(~/.claude/plugins/sdd/**)",

      "Write(sdd/**)",
      "Write(specs/**)",
      "Write(components/**)",
      "Write(config/**)",
      "Write(.github/workflows/**)",
      "Write(README.md)",
      "Write(CLAUDE.md)",
      "Write(package.json)",
      "Write(.gitignore)",

      "Edit(sdd/**)",
      "Edit(specs/**)",
      "Edit(components/**)",
      "Edit(config/**)",
      "Edit(.github/workflows/**)",
      "Edit(README.md)",
      "Edit(CLAUDE.md)",
      "Edit(package.json)",
      "Edit(.gitignore)",

      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",

      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(npx ts-node:*)",
      "Bash(npx tsc:*)",

      "Bash(mkdir -p:*)",
      "Bash(ls:*)",
      "Bash(tree:*)"
    ],
    "deny": [
      "Write(.env*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/.git/**)",
      "Write(**/node_modules/**)",

      "Edit(.env*)",
      "Edit(**/.env*)",
      "Edit(**/secrets/**)",
      "Edit(**/.git/**)",
      "Edit(**/node_modules/**)",

      "Bash(rm -rf *)",
      "Bash(curl * | bash*)",
      "Bash(wget * | bash*)",
      "Bash(curl * | sh*)",
      "Bash(wget * | sh*)"
    ]
  }
}
