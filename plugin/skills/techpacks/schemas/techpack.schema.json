{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sdd.dev/schemas/techpack.json",
  "title": "Tech Pack Manifest v2",
  "description": "Self-describing tech pack manifest. Declares skills, agents, components, phases, help, and commands.",
  "type": "object",
  "required": ["techpack", "skills", "agents", "components", "phases", "help", "commands"],
  "additionalProperties": false,
  "properties": {
    "techpack": {
      "type": "object",
      "required": ["name", "namespace", "description", "version", "min_sdd_version", "system_path"],
      "additionalProperties": false,
      "properties": {
        "name":            { "type": "string", "pattern": "^[a-z][a-z0-9-]+$" },
        "namespace":       { "type": "string", "pattern": "^[a-z][a-z0-9-]+$", "maxLength": 10 },
        "description":     { "type": "string" },
        "version":         { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "min_sdd_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "system_path":     { "type": "string", "description": "Relative path to system CLI entrypoint" }
      }
    },
    "skills": {
      "type": "object",
      "description": "Skill registry — name to relative path mapping.",
      "minProperties": 1,
      "additionalProperties": { "type": "string" }
    },
    "agents": {
      "type": "object",
      "description": "Agent registry — name to relative path mapping.",
      "additionalProperties": { "type": "string" }
    },
    "components": {
      "type": "object",
      "description": "Component types this techpack can build.",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#/$defs/component" }
    },
    "phases": {
      "type": "object",
      "description": "Lifecycle phase contributions. Core owns phase definitions; techpack contributes skills and agents.",
      "additionalProperties": { "$ref": "#/$defs/phase" }
    },
    "help": {
      "type": "object",
      "required": ["capabilities", "content"],
      "additionalProperties": false,
      "properties": {
        "capabilities": { "type": "string", "description": "Skill name for capabilities (loaded by /sdd)" },
        "content":      { "type": "string", "description": "Skill name for help content (loaded by /sdd-help)" }
      }
    },
    "commands": {
      "type": "object",
      "description": "Namespaced command definitions exposed via /sdd-run.",
      "additionalProperties": { "$ref": "#/$defs/command_namespace" }
    }
  },
  "$defs": {
    "component": {
      "type": "object",
      "required": ["description", "directory_pattern", "depends_on", "scaffolding", "skills"],
      "additionalProperties": false,
      "properties": {
        "singleton":         { "type": "boolean", "description": "True for single-instance components, false for multi-instance." },
        "description":       { "type": "string" },
        "directory_pattern":  { "type": "string" },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Component type keys this component depends on."
        },
        "scaffolding": { "type": "string", "description": "Skill name from the skills registry." },
        "skills": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Skill names from the skills registry."
        },
        "agent": { "type": "string", "description": "Agent name from the agents registry." }
      }
    },
    "phase": {
      "type": "object",
      "required": ["orchestrator_skills"],
      "additionalProperties": false,
      "properties": {
        "orchestrator_skills": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Skill names from the skills registry for this phase."
        },
        "agents": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Agent names from the agents registry for this phase."
        }
      }
    },
    "command_namespace": {
      "type": "object",
      "required": ["handler", "actions"],
      "additionalProperties": false,
      "properties": {
        "handler": { "type": "string", "enum": ["system", "skill"], "description": "Dispatch type." },
        "skill":   { "type": "string", "description": "Skill name for handler: skill commands." },
        "actions": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "$ref": "#/$defs/command_action" }
        }
      }
    },
    "command_action": {
      "type": "object",
      "required": ["description", "public"],
      "additionalProperties": false,
      "properties": {
        "description": { "type": "string" },
        "public":      { "type": "boolean", "description": "True if user-facing." },
        "destructive": { "type": "boolean", "description": "True if action has destructive side effects." },
        "args": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/command_arg" }
        }
      }
    },
    "command_arg": {
      "type": "object",
      "required": ["type", "mandatory", "description"],
      "additionalProperties": false,
      "properties": {
        "type":        { "type": "string", "enum": ["string", "number", "boolean"] },
        "mandatory":   { "type": "boolean" },
        "description": { "type": "string" },
        "default":     {}
      }
    }
  }
}
