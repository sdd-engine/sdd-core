{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SDD Settings",
  "description": "Schema for sdd/sdd-settings.yaml â€” the project configuration file. Component-type-specific settings validation is delegated to tech packs.",
  "type": "object",
  "required": ["sdd", "project"],
  "additionalProperties": false,
  "properties": {
    "system": {
      "type": "object",
      "description": "SDD CLI system settings (logging, etc.).",
      "required": ["logging"],
      "additionalProperties": false,
      "properties": {
        "logging": {
          "type": "object",
          "description": "Logging configuration.",
          "required": ["enabled", "level"],
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable file logging."
            },
            "level": {
              "type": "string",
              "enum": ["trace", "debug", "info", "warn", "error", "fatal"],
              "default": "info",
              "description": "Log level."
            }
          }
        }
      }
    },
    "sdd": {
      "type": "object",
      "description": "SDD plugin metadata.",
      "required": ["initialized_by_plugin_version", "updated_by_plugin_version", "initialized_at", "updated_at"],
      "additionalProperties": false,
      "properties": {
        "initialized_by_plugin_version": {
          "type": "string",
          "description": "Plugin version that first created this project (immutable after init)."
        },
        "updated_by_plugin_version": {
          "type": "string",
          "description": "Plugin version that last reconciled settings."
        },
        "initialized_at": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}Z$",
          "description": "UTC datetime project was initialized (YYYY-MM-DD HH:MM:SSZ)."
        },
        "updated_at": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}Z$",
          "description": "UTC datetime settings were last updated (YYYY-MM-DD HH:MM:SSZ)."
        }
      }
    },
    "project": {
      "type": "object",
      "description": "Project metadata.",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "Project name (lowercase, hyphens, no spaces)."
        },
        "description": {
          "type": "string",
          "description": "Brief project description."
        }
      }
    },
    "techpacks": {
      "type": "object",
      "description": "Registered tech packs, keyed by namespace.",
      "additionalProperties": {
        "$ref": "#/$defs/techpack_entry"
      }
    },
    "components": {
      "type": "object",
      "description": "Project components, keyed by name. Each references a techpack namespace.",
      "additionalProperties": {
        "$ref": "#/$defs/component_manifest"
      }
    }
  },
  "$defs": {
    "techpack_entry": {
      "type": "object",
      "required": ["name", "namespace", "version", "mode"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Tech pack display name."
        },
        "namespace": {
          "type": "string",
          "description": "Short namespace identifier."
        },
        "version": {
          "type": "string",
          "description": "Tech pack version."
        },
        "mode": {
          "type": "string",
          "enum": ["internal", "external", "git"],
          "description": "How the tech pack is resolved."
        },
        "path": {
          "type": "string",
          "description": "Path for internal/external mode."
        },
        "repo": {
          "type": "string",
          "description": "Git clone URL (git mode only)."
        },
        "ref": {
          "type": "string",
          "description": "Git ref to checkout (git mode only)."
        },
        "install_path": {
          "type": "string",
          "description": "Path relative to project root (git mode only)."
        }
      }
    },
    "component_manifest": {
      "type": "object",
      "required": ["type", "techpack", "directory"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "Component type as defined by the active tech pack."
        },
        "techpack": {
          "type": "string",
          "description": "Namespace of the tech pack that owns this component."
        },
        "directory": {
          "type": "string",
          "description": "Relative path from project root (e.g., 'components/servers/my-api')."
        }
      }
    }
  }
}
